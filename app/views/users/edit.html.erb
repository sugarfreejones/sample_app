<h1>Edit User</h1>

<%= form_for(@user) do |f| %>
	
	<%= render 'shared/error_messages' %>
	<%= render 'fields' , :f => f %>
	
	<div class="actions">
	  <%= f.submit "Update" %>
	</div>

	<div>
	  <%= gravatar_for @user %>
	  <a href="http://gravatar.com/emails">change</a>
	</div>
	
<% end %>
